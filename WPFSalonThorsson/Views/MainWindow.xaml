<Window x:Class="WPFSalonThorsson.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSalonThorsson"
        mc:Ignorable="d"
        Title="Salon Thorsson" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="Salon Thorsson" FontSize="24" FontWeight="SemiBold"/>
                <TextBlock Text="Stoleudlejning — Lejeaftaler og lejere" Opacity="0.7"/>
            </StackPanel>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Pladsholder til status/feedback senere -->
                <TextBlock Text="{Binding StatusMessage}" Margin="900,0,12,0" VerticalAlignment="Center"/>
                <Button Content="Refresh" Command="{Binding RefreshCommand}" />
            </StackPanel>
        </DockPanel>

        <!-- Main content: List + Form side by side -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Overview -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filter / Tabs -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Lejeaftaler" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <Separator Margin="10,0" Width="1"/>
                        <TextBlock Text="Søg (ID):" VerticalAlignment="Center"/>
                        <TextBox Width="120" Margin="6,0,10,0" Text="{Binding SearchRentalId}"/>
                        <Button Content="Søg" Command="{Binding SearchRentalCommand}" />
                    </StackPanel>

                    <TabControl Grid.Row="1">
                        <TabItem Header="Kommende / Aktive">
                            <DataGrid ItemsSource="{Binding UpcomingRentals}"
                                      SelectedItem="{Binding SelectedRental}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding RentalId}" Width="40"/>
                                    <DataGridTextColumn Header="Lejer" Binding="{Binding RenterName}" Width="80"/>
                                    <DataGridTextColumn Header="Tlf" Binding="{Binding PhoneNumber}" Width="90"/>
                                    <DataGridTextColumn Header="Stol" Binding="{Binding ChairId}" Width="40"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding RentalType}" Width="90"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding PaymentStatus}" Width="70"/>
                                    <DataGridTextColumn Header="Start" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                                    <DataGridTextColumn Header="Slut" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=N0}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <TabItem Header="Historik">
                            <DataGrid ItemsSource="{Binding CompletedRentals}"
                                      SelectedItem="{Binding SelectedRental}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding RentalId}" Width="40"/>
                                    <DataGridTextColumn Header="Lejer" Binding="{Binding RenterName}" Width="80"/>
                                    <DataGridTextColumn Header="Tlf" Binding="{Binding PhoneNumber}" Width="90"/>
                                    <DataGridTextColumn Header="Stol" Binding="{Binding ChairId}" Width="40"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding RentalType}" Width="90"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding PaymentStatus}" Width="70"/>
                                    <DataGridTextColumn Header="Start" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                                    <DataGridTextColumn Header="Slut" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                                    <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=N0}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>

                    <!-- Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Opret" Margin="0,0,8,0" Command="{Binding StartCreateCommand}"/>
                        <Button Content="Rediger" Margin="0,0,8,0" Command="{Binding StartEditCommand}"/>
                        <Button Content="Slet" Command="{Binding DeleteCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- RIGHT: Form panel -->
            <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="{Binding FormTitle}" FontSize="18" FontWeight="SemiBold"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="101"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="19.96"/>
                                <RowDefinition Height="Auto" MinHeight="16"/>
                                <RowDefinition Height="Auto"/> 
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="25.03"/>
                                <RowDefinition Height="Auto" MinHeight="27"/>
                                <RowDefinition Height="Auto" MinHeight="25"/>
                                <RowDefinition Height="Auto" MinHeight="27.017"/>
                                <RowDefinition Height="Auto" MinHeight="16"/>
                            </Grid.RowDefinitions>

                            <!-- Renter selection -->
                            <TextBlock Grid.Column="0" Text="Lejer (tlf/id):" VerticalAlignment="Center" Height="16"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="49,0,30,16" Grid.RowSpan="2">
                             <TextBox Width="160" Margin="0,0,8,0" Text="{Binding RenterSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                                <Button Content="Find" Command="{Binding FindRenterCommand}"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Valgt lejer:" VerticalAlignment="Center" Height="16"/>
                            <TextBlock Grid.Column="1" Text="{Binding SelectedRenterDisplay}" Opacity="0.85" Margin="49,19,49,1" Grid.RowSpan="2"/>

                            <!-- Chair -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Stol ID:" VerticalAlignment="Center" Height="16"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ChairId}" Margin="49,1,49,17" Grid.RowSpan="2"/>

                            <!-- Rental type -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Lejetype:" VerticalAlignment="Center" Height="16"/>
                            <ComboBox Grid.Row="3" Grid.Column="1"
                                      ItemsSource="{Binding RentalTypes}"
                                      SelectedItem="{Binding SelectedRentalType}" Margin="49,1,49,3"/>

                            <!-- Dates -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Startdato:" VerticalAlignment="Center" Height="16"/>
                            <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding StartDate}" Margin="30,17,30,9" Grid.RowSpan="2"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Slutdato:" VerticalAlignment="Center" Height="16"/>
                            <DatePicker Grid.Row="5" Grid.Column="1" SelectedDate="{Binding EndDate}" Margin="30,1,30,2"/>

                            <!-- Price -->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Pris:" VerticalAlignment="Center" Height="16"/>
                            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Price}" Margin="49,2,49,19" Grid.RowSpan="2"/>

                            <!-- Payment -->
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Betalingsstatus:" VerticalAlignment="Center" Height="16"/>
                            <ComboBox Grid.Row="7" Grid.Column="1"
                                      ItemsSource="{Binding PaymentStatuses}"
                                      SelectedItem="{Binding SelectedPaymentStatus}" Margin="49,0,49,0"/>

                            <!-- Total -->
                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Total:" VerticalAlignment="Center" Height="16"/>
                            <TextBox Grid.Row="7" Grid.Column="1" IsReadOnly="True"
                                     Text="{Binding TotalPricePreview, Mode=OneWay}"
                                     Margin="49,25,49,-5" Grid.RowSpan="2"/>
                        </Grid>
                    </ScrollViewer>

                    <!-- Form buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Annuller" Margin="0,0,8,0" Command="{Binding CancelCommand}"/>
                        <Button Content="Gem" Command="{Binding SaveCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

